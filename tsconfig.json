{
  "compilerOptions": {
    "composite": true,
    "target": "es5",
    "module": "esnext",
    "rootDir": "packages",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",

    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "traceResolution": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,

    "lib": ["esnext", "esnext.asynciterable", "dom", "dom.iterable"],
    "types": ["@types/node", "@types/jest", "@types/resize-observer-browser"],
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"],
      "@vuehooks/jest": ["./packages/testing/src/index.ts"]
    }
  },
  "include": ["packages", "setupTest.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.stories.ts"]
}
